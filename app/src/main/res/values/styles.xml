<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="Widget.AppCompat.Toolbar">
        <!-- Define custom attributes here -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextStyle.update" >
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="TextStyle.big_bold" >
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextStyle.Temperature" >
        <item name="android:textSize">45dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextStyle.description_item" >
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="TextStyle.maxTemp_item" >
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="TextStyle.minTemp_item" >
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#CC000000</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="TextStyle.small_bold" >
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:alpha">0.54</item>
    </style>

</resources>
